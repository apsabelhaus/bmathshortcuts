% Required packages: all related to math symbols.
\RequirePackage{amsfonts}
\RequirePackage{amsmath}
\RequirePackage{amssymb}
\RequirePackage{mathtools} % this is needed for the \vcentcolon in \defeq
\RequirePackage{bm}

